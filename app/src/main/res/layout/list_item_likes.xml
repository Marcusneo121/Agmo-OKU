<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="365dp"
    android:layout_height="155dp"
    android:layout_marginStart="22dp"
    android:layout_marginLeft="22dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:background="#F2F2F2"
    app:cardElevation="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLikes"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F2F2F2"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/showTopicName"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Story of Muhammad Ziyad Zolkefli"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/divider2"
                android:layout_width="158dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="#585858"
                android:divider="#9A9A9A"
                android:dividerHeight="1dp" />

            <TextView
                android:id="@+id/showTopicDescription"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Inspiration story of Malaysian Paralympic Athlete Gold Medalist"
                android:textColor="#8E8E8E"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
